<?xml version='1.0' encoding='utf-8'?>
<plugin id="cordova-esptouch" version="0.0.1" xmlns="http://apache.org/cordova/ns/plugins/1.0" xmlns:android="http://schemas.android.com/apk/res/android">
  <name>EspTouch</name>
  <js-module name="EspTouch" src="www/EspTouch.js">
    <clobbers target="cordova.plugins.EspTouch" />
  </js-module>
  <platform name="android">
    <config-file parent="/*" target="res/xml/config.xml">
      <feature name="EspTouch">
        <param name="android-package" value="com.nexttecnology.cordova" />
      </feature>
    </config-file>
    <config-file parent="/*" target="AndroidManifest.xml" />
    <source-file src="src/android/EspTouch.java" target-dir="src/com/nexttecnology/cordova" />
    <source-file src="src/android/com/espressif/iot/esptouch" target-dir="src/com/espressif/iot/esptouch" />
  </platform>
  <platform name="ios">
    <config-file parent="/*" target="config.xml">
      <feature name="EspTouch">
        <param name="ios-package" value="EspTouch" />
      </feature>
    </config-file>
    <header-file src="src/ios/EspTouch.h"/>
    <source-file src="src/ios/EspTouch.m"/>
    <source-file src="src/ios/Common"/>
    <source-file src="src/ios/ESPTouch"/>
    <framework src="CoreGraphics.framework" />
    <framework src="UIKit.framework" />
    <framework src="Foundation.framework" />
  </platform>
</plugin>
